/* pages/personal/personal.wxss */
.p-container{
  background: #1A9264;
  height: 100vh;
  width: 100%;

  display: flex;
  justify-content: center;
}

.p-in-bg{
  height: 200vh;
  width: 135vh;
  position: fixed;
  top: 25vh;
  background: #ffffff;
  border-radius: 50%;

  display: flex;
  justify-content: center;
}

.avd-circle{
  height: 18vh;
  width: 18vh;
  border-radius: 50%;
  background: #FFFFFF;
  border: 10rpx solid #1A9264;
  box-sizing: border-box;
  overflow: hidden;
  position: fixed;
  top: 16vh;
  z-index: 1000;
}

.adv-img{
  height: 100%;
  width: 100%;
  border-radius: 50%;
}

.in-items{
  width: 100vw;

  position: fixed;
  top: 34vh;

  display: flex;
  flex-direction: column;
}

.username{
  color: #333333;
  text-align: center;
  font-size: 50rpx;
  margin: 10rpx;
}

.info-box {
  width: 92.5%;
  height: 13vh;
  background: #FDD73F;
  /* border: 1px solid #FFA425; */
  box-sizing: border-box;
  box-shadow: 2rpx 2rpx 5rpx rgba(0, 0, 0, 0.5);
  border-radius: 10px;
  margin: 20rpx;

  align-self: center;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.border{
  /* border-right: 1rpx solid #ffffff; */
  color: #ffffff;
  font-size: 100rpx;
  font-weight: 100;
  overflow: hidden;
  vertical-align: middle;
  line-height: 100%;

}

.info-box-text{
  width: 50%;
  height: 100%;
  font-size: 36rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.set-btn{
  margin: 30rpx;

  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
}